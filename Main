Main.asm
; Continuously reads from x2600 making sure its not reading duplicate symbols.
; Processes the symbol based on the program description of mRNA processing.

        .ORIG x4000

; initialize the stack pointer
	LD  R6,StckBtm
	
;global location where ISR puts char is initialized to 0
	AND R2,R2,#0
	STI R2,GLOB

; set up the keyboard interrupt vector table entry
	LD  R1,KBISR
	STI R1,KBIVE 					
	;tells computer what action to take when key is struck, exescutes code at x2000
	
; enable keyboard interrupts
	LD  R1, KBIEN
	STI R1, KBSR

; start of actual program
LOOP	LDI R0, GLOB; R0 <- m[x2600]
	BRz LOOP
	OUT
	BRnzp LOOP
	
	HALT

KBSR     .FILL xFE00
KBIEN    .FILL x4000
KBISR    .FILL x2000
KBIVE    .FILL x0180
StckBtm  .FILL x3000
GLOB	 .FILL x2600

        .END
